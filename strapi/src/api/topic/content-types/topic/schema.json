{
  "kind": "collectionType",
  "collectionName": "topics",
  "info": {
    "singularName": "topic",
    "pluralName": "topics",
    "displayName": "Topic",
    "description": "Represents specific PANCE topics within a System"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "introduction": {
      "type": "richtext"
    },
    "types": {
      "type": "component",
      "repeatable": true,
      "component": "topic.disease-type"
    },
    "diagnosis_overview": {
      "type": "richtext"
    },
    "diagnostic_tools": {
      "type": "component",
      "repeatable": true,
      "component": "common.text-item"
    },
    "management": {
      "type": "richtext",
      "required": true
    },
    "highyieldPoints": {
      "type": "richtext"
    },
    "system": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::system.system",
      "inversedBy": "topics"
    },
    "cards": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::card.card",
      "mappedBy": "topic"
    },
    "subtopics": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::subtopic.subtopic",
      "mappedBy": "topic"
    }
  }
}
